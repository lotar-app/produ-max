  <script>
    const params = new URLSearchParams(window.location.search);
    const ruolo = params.get('ruolo') || 'sala';

    // Caricamento barra superiore + offset topnav
fetch(`/partials/topnav_${ruolo}.html`, { cache: 'no-store' })
  .then(res => res.text())
  .then(html => {
    const placeholder = document.getElementById('top-menu-placeholder');
    placeholder.innerHTML = html;

    // attiva comportamento "has-topnav"
    document.body.classList.add('has-topnav');

    // === TOPNAV OFFSET: calcola altezza reale e applica margine ai wrapper ===
    function applyTopnavOffset() {
      const topnav =
        placeholder.querySelector('.top-nav') ||
        document.querySelector('.top-nav');

      const h = topnav && topnav.offsetHeight ? topnav.offsetHeight : 55; // fallback 55px
      document.documentElement.style.setProperty('--topnav-h', h + 'px');
      // console.log('[TOPNAV] altezza:', h);
    }

    // subito + prossimo frame (dopo render)
    applyTopnavOffset();
    requestAnimationFrame(applyTopnavOffset);

    // su resize
    window.addEventListener('resize', applyTopnavOffset);

    // se cambia il contenitore della topnav (submenu, wrap, icone/font)
    if ('ResizeObserver' in window) {
      const ro = new ResizeObserver(applyTopnavOffset);
      ro.observe(placeholder);
    }

    // safety post-caricamenti lenti
    setTimeout(applyTopnavOffset, 400);
  })
  .catch(err => console.error('‚ùå Errore caricamento topnav:', err));


// Titolo dinamico
const titolo = document.getElementById('titolo-report');
if (window.location.search.includes('smontaggio')) {
  titolo.textContent = 'Report: Per Smontaggio';
} else if (window.location.search.includes('falegnameria')) {
  titolo.textContent = 'Report: Per Falegnameria';
} else if (window.location.search.includes('finito_admin')) {
  titolo.textContent = 'Report: Da Completare';
} else if (window.location.search.includes('consegna')) {
  titolo.textContent = 'Report: Da Consegnare';
} else {
  titolo.textContent = 'Report: Lavorazioni senza data specifica';
}
  </script>

  <script src="/js/report_date_mancanti.js"></script>
  <script>
  // Mostra ruolo utente nella sidebar
  window.addEventListener('DOMContentLoaded', () => {
    const ruolo = sessionStorage.getItem('ruolo') || 'sala';
    const spanRuolo = document.getElementById('ruolo-utente');
    if (ruolo && spanRuolo) {
      spanRuolo.textContent = ruolo;
    }
  });
</script>
